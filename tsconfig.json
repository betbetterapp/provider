{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES5",
        "lib": ["ES2020", "dom"],
        "moduleResolution": "Node",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": false,
        "declaration": false,
        "listEmittedFiles": true,
        "esModuleInterop": true,
        "incremental": true,
        "tsBuildInfoFile": "buildcache/tsbuildinfo.json",
        "allowSyntheticDefaultImports": true,
        "outDir": "build/"
    },
    "include": ["src/**/*"]
}
